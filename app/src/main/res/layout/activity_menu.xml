<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menuscreen"
    tools:context=".menu">

    <Button
        android:id="@+id/backbutt"
        android:layout_width="158dp"
        android:layout_height="46dp"
        android:alpha="0.4"
        android:background="@drawable/backbutt"
        android:onClick="goback"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/aboutbutt"
        android:layout_width="158dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:onClick="goabout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/about" />

    <ImageView
        android:id="@+id/contactbutt"
        android:layout_width="158dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:onClick="gocontact"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aboutbutt"
        app:srcCompat="@drawable/contact" />

    <ImageView
        android:id="@+id/supportbutt"
        android:layout_width="158dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:onClick="gosupport"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contactbutt"
        app:srcCompat="@drawable/suportbutt" />
</androidx.constraintlayout.widget.ConstraintLayout>